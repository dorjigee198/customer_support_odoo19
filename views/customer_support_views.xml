<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="view_customer_support_tree" model="ir.ui.view">
        <field name="name">customer.support.tree</field>
        <field name="model">customer.support</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="subject"/>
                <field name="customer_id"/>
                <field name="priority"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="view_customer_support_form" model="ir.ui.view">
        <field name="name">customer.support.form</field>
        <field name="model">customer.support</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="subject"/>
                        <field name="customer_id"/>
                        <field name="assigned_to"/>
                        <field name="priority"/>
                        <field name="state"/>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_customer_support" model="ir.actions.act_window">
        <field name="name">Customer Support</field>
        <field name="res_model">customer.support</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_customer_support_root" name="Customer Support" sequence="10"/>
    <menuitem id="menu_customer_support" name="Tickets" parent="menu_customer_support_root" action="action_customer_support" sequence="1"/>
</odoo>