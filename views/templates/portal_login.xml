<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="portal_login_page" name="Customer Support Login">
        <t t-call="web.layout">
            <t t-set="head">
                <!-- Bootstrap 5 CSS -->
                <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"/>
                <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet"/>
                
                <!-- Custom CSS - THIS LINE WAS MISSING -->
                <link rel="stylesheet" href="/customer_support/static/src/css/portal_login.css"/>
            </t>
            
            <div class="login-container container-fluid p-0">
                <div class="row g-0">
                    <!-- Left Section - Illustration -->
                    <!-- Left Section - Illustration -->
<div class="left-section col-lg-6 d-flex align-items-stretch d-none d-lg-flex">
    <div class="illustration-container w-100">
        <!-- Background Pattern -->
        <div class="background-pattern"></div>
        
        <!-- Floating Elements -->
        <div class="floating-elements-container">
            <div class="floating-element">
                <i class="bi bi-envelope-fill"></i>
            </div>
            <div class="floating-element">
                <i class="bi bi-check-circle-fill"></i>
            </div>
            <div class="floating-element">
                <i class="bi bi-chat-dots-fill"></i>
            </div>
        </div>
        
        <!-- Character Image with Shadow -->
        <div class="character-illustration-container">
            <!-- Shadow -->
            <div class="character-shadow"></div>
            
            <!-- Your Image -->
            <img src="/customer_support/static/src/img/girl.png" 
                 alt="Character" 
                 class="character-image"/>
        </div>
    </div>
</div>
                    
                    <!-- Right Section - Login Form -->
                    <div class="right-section col-lg-6 d-flex align-items-stretch">
                        <div class="background-overlay"></div>
                        <div class="login-form-container w-100">
                            <div class="login-box">
                                <!-- Logo -->
                                <div class="logo-section">
                                    <div class="logo-container">
                                        <div class="logo-circle">
                                            <img src="/customer_support/static/src/img/images.png" alt="Logo" class="logo-img"/>
                                        </div>
                                    </div>
                                    <h2 class="login-title">Login to your account</h2>
                                </div>
                                
                                <!-- Error Message -->
                                <div class="error-message" t-if="error">
                                    <t t-esc="error"/>
                                </div>
                                
                                <!-- Login Form -->
                                <form action="/customer_support/authenticate" method="post">
                                    <!-- Email Input -->
                                    <div class="input-group-custom">
                                        <label for="email" class="form-label">Email Address</label>
                                        <div class="position-relative">
                                            <input type="email" id="email" name="email" class="form-control form-control-custom ps-5" 
                                                   placeholder="Enter your email" required="required" autocomplete="email"/>
                                            <i class="bi bi-envelope-fill input-icon"></i>
                                        </div>
                                    </div>
                                    
                                    <!-- Password Input -->
                                    <div class="input-group-custom">
                                        <label for="password" class="form-label">Password</label>
                                        <div class="position-relative">
                                            <input type="password" id="password" name="password" class="form-control form-control-custom ps-5" 
                                                   placeholder="Enter your password" required="required" autocomplete="current-password"/>
                                            <i class="bi bi-lock-fill input-icon"></i>
                                            <button type="button" class="password-toggle-btn" onclick="togglePassword()">
                                                <i class="bi bi-eye-fill"></i>
                                            </button>
                                        </div>
                                    </div>
                                    
                                    <!-- Forgot/Reset Links -->
                                    <div class="login-links">
                                        <a href="/web/reset_password" class="text-decoration-none">Forgot password?</a>
                                        <a href="/web/reset_password" class="text-decoration-none">Reset password</a>
                                    </div>
                                    
                                    <!-- Submit Button -->
                                    <button type="submit" class="submit-btn">
                                        <span>Sign in</span>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Bootstrap JS Bundle -->
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
            
            <!-- Custom JavaScript - THIS LINE WAS MISSING -->
            <script src="/customer_support/static/src/js/portal_login.js"></script>
        </t>
    </template>
</odoo>