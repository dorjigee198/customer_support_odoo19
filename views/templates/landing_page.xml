<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="landing_page" name="Customer Support Landing Page">
        <t t-call="web.layout">
            <t t-set="head">
                <!-- Bootstrap Icons -->
                <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet"/>
                
                <!-- Google Fonts -->
                <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&amp;display=swap" rel="stylesheet"/>
                
                <!-- Custom Landing Page CSS -->
                <link rel="stylesheet" href="/customer_support/static/src/css/landing_page.css"/>
                
                <style>
                    /* Additional inline styles for extra polish */
                    .stat-item::after {
                        content: '';
                        position: absolute;
                        bottom: 0;
                        left: 50%;
                        transform: translateX(-50%);
                        width: 40px;
                        height: 3px;
                        background: var(--gradient-accent);
                        border-radius: 2px;
                        opacity: 0;
                        transition: opacity 0.3s ease;
                    }
                    
                    .stat-item:hover::after {
                        opacity: 1;
                    }
                    
                    .feature-card:nth-child(1) .feature-icon {
                        background: rgba(227, 76, 92, 0.2);
                    }
                    
                    .feature-card:nth-child(2) .feature-icon {
                        background: rgba(46, 196, 182, 0.2);
                    }
                    
                    .feature-card:nth-child(3) .feature-icon {
                        background: rgba(251, 197, 49, 0.2);
                    }
                    
                    .feature-card:nth-child(4) .feature-icon {
                        background: rgba(155, 81, 224, 0.2);
                    }
                </style>
            </t>
            
            <div class="landing-container">
                <!-- Animated Background -->
                <div class="bg-animation">
                    <div class="bg-circle"></div>
                    <div class="bg-circle"></div>
                    <div class="bg-circle"></div>
                </div>
                
                <!-- Content -->
                <div class="landing-content">
                    <!-- Enhanced Navigation -->
                    <nav class="landing-nav">
                        <div class="nav-container">
                            <div class="logo-section">
                                <div class="logo-circle-landing">
                                    <img src="/customer_support/static/src/img/images.png" alt="Dragon Coders Logo" class="logo-img-landing"/>
                                </div>
                                <span class="brand-text">Dragon Coders Support</span>
                            </div>
                            <div class="nav-buttons">
                                <a href="/customer_support/login" class="btn-nav btn-outline">
                                    <i class="bi bi-box-arrow-in-right"></i> Sign In
                                </a>
                                <a href="/customer_support/login" class="btn-nav btn-solid">
                                    <i class="bi bi-rocket-takeoff"></i> Get Started
                                </a>
                            </div>
                        </div>
                    </nav>
                    
                    <!-- Enhanced Hero Section -->
                    <section class="hero-section">
                        <div class="hero-container">
                            <!-- Left Content -->
                            <div class="hero-text">
                                <span class="hero-badge">
                                    <i class="bi bi-stars"></i> Premium Support Platform
                                </span>
                                <h1 class="hero-title">Elevate Your Customer Experience</h1>
                                <p class="hero-subtitle">
                                    Transform your support operations with our intelligent platform. 
                                    Streamline ticket management, gain actionable insights, and deliver 
                                    exceptional service that keeps customers coming back.
                                </p>
                                <div class="hero-cta">
                                    <a href="/customer_support/login" class="btn-primary-hero">
                                        <i class="bi bi-rocket-takeoff"></i>
                                        Launch Dashboard
                                    </a>
                                    <a href="#features" class="btn-secondary-hero">
                                        <i class="bi bi-play-circle"></i>
                                        Watch Demo
                                    </a>
                                </div>
                            </div>
                            
                            <!-- Enhanced Right Content - Feature Cards -->
                            <div class="hero-visual">
                                <div class="feature-card">
                                    <div class="feature-icon">
                                        <i class="bi bi-lightning-charge-fill"></i>
                                    </div>
                                    <h3 class="feature-title">Real-Time Response</h3>
                                    <p class="feature-desc">
                                        Instant ticket processing with AI-powered suggestions and automated routing.
                                    </p>
                                </div>
                                
                                <div class="feature-card">
                                    <div class="feature-icon">
                                        <i class="bi bi-graph-up-arrow"></i>
                                    </div>
                                    <h3 class="feature-title">Smart Analytics</h3>
                                    <p class="feature-desc">
                                        Advanced reporting and predictive insights to optimize your support strategy.
                                    </p>
                                </div>
                                
                                <div class="feature-card">
                                    <div class="feature-icon">
                                        <i class="bi bi-shield-check"></i>
                                    </div>
                                    <h3 class="feature-title">Enterprise Security</h3>
                                    <p class="feature-desc">
                                        Military-grade encryption and compliance with global data protection standards.
                                    </p>
                                </div>
                                
                                <div class="feature-card">
                                    <div class="feature-icon">
                                        <i class="bi bi-people-fill"></i>
                                    </div>
                                    <h3 class="feature-title">Team Collaboration</h3>
                                    <p class="feature-desc">
                                        Seamless internal communication and workflow management for your team.
                                    </p>
                                </div>
                            </div>
                        </div>
                    </section>
                    
                    <!-- Enhanced Stats Section -->
                    <section class="stats-section">
                        <div class="stats-container">
                            <div class="stat-item">
                                <span class="stat-number">15K+</span>
                                <span class="stat-label">Happy Clients</span>
                            </div>
                            <div class="stat-item">
                                <span class="stat-number">99.2%</span>
                                <span class="stat-label">Satisfaction</span>
                            </div>
                            <div class="stat-item">
                                <span class="stat-number">&lt;2min</span>
                                <span class="stat-label">Avg Response</span>
                            </div>
                            <div class="stat-item">
                                <span class="stat-number">750K+</span>
                                <span class="stat-label">Issues Solved</span>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
            
            <!-- Enhanced JavaScript for interactivity -->
            <script><![CDATA[
                document.addEventListener('DOMContentLoaded', function() {
                    // Add hover effects to feature cards
                    const featureCards = document.querySelectorAll('.feature-card');
                    featureCards.forEach(card => {
                        card.addEventListener('mouseenter', function() {
                            this.style.transform = 'translateY(-10px) scale(1.02)';
                        });
                        
                        card.addEventListener('mouseleave', function() {
                            this.style.transform = 'translateY(0) scale(1)';
                        });
                    });
                    
                    // Animate stats counting
                    const statNumbers = document.querySelectorAll('.stat-number');
                    statNumbers.forEach(stat => {
                        const target = parseInt(stat.textContent);
                        const suffix = stat.textContent.replace(/[0-9]/g, '');
                        let current = 0;
                        const increment = target / 50;
                        
                        const updateCount = () => {
                            if (current < target) {
                                current += increment;
                                stat.textContent = Math.floor(current) + suffix;
                                setTimeout(updateCount, 30);
                            } else {
                                stat.textContent = target + suffix;
                            }
                        };
                        
                        // Start counting when stats section is in view
                        const observer = new IntersectionObserver((entries) => {
                            entries.forEach(entry => {
                                if (entry.isIntersecting) {
                                    updateCount();
                                    observer.unobserve(entry.target);
                                }
                            });
                        }, { threshold: 0.5 });
                        
                        observer.observe(stat.closest('.stats-section'));
                    });
                    
                    // Enhanced button click effects
                    const buttons = document.querySelectorAll('.btn-primary-hero, .btn-solid');
                    buttons.forEach(button => {
                        button.addEventListener('click', function(e) {
                            if (!this.href) {
                                e.preventDefault();
                                // Create ripple effect
                                const ripple = document.createElement('span');
                                const rect = this.getBoundingClientRect();
                                const size = Math.max(rect.width, rect.height);
                                const x = e.clientX - rect.left - size/2;
                                const y = e.clientY - rect.top - size/2;
                                
                                ripple.style.cssText = `
                                    position: absolute;
                                    border-radius: 50%;
                                    background: rgba(255, 255, 255, 0.6);
                                    transform: scale(0);
                                    animation: ripple 0.6s linear;
                                    width: ${size}px;
                                    height: ${size}px;
                                    top: ${y}px;
                                    left: ${x}px;
                                    pointer-events: none;
                                `;
                                
                                this.appendChild(ripple);
                                setTimeout(() => ripple.remove(), 600);
                            }
                        });
                    });
                    
                    // Add CSS for ripple effect
                    const style = document.createElement('style');
                    style.textContent = `
                        @keyframes ripple {
                            to {
                                transform: scale(4);
                                opacity: 0;
                            }
                        }
                    `;
                    document.head.appendChild(style);
                });
            ]]></script>
        </t>
    </template>
</odoo>