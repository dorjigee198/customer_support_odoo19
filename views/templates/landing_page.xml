<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="landing_page" name="Minimalist Landing Page">
        <t t-call="web.layout">
            <t t-set="head">
                <!-- Bootstrap Icons -->
                <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet"/>
                
                <!-- Google Fonts -->
                <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&amp;display=swap" rel="stylesheet"/>
                
                <!-- Custom Landing Page CSS -->
                <link rel="stylesheet" href="/customer_support/static/src/css/landing_page.css"/>
            </t>
            
            <!-- Landing Page Content -->
            <div class="minimal-landing">
                <!-- Background Image with Fade Overlay -->
                <div class="background-image"></div>
                <div class="fade-overlay"></div>
                
                <!-- Top Navigation Bar -->
                <div class="top-nav">
                    <div class="nav-container">
                        <!-- FAQ Link (Left) -->
                        <a href="/customer_support/chatbot" class="faq-link">
                            <i class="bi bi-question-circle"></i>
                            <span>FAQ</span>
                        </a>
                        
                        <!-- Logo (Right) -->
                        <div class="logo-circle">
                            <img src="/customer_support/static/src/img/images.png" alt="Logo" class="logo-img"/>
                        </div>
                    </div>
                </div>
                
                <!-- Content Container -->
                <div class="content-wrapper">
                    <div class="welcome-box">
                        <h1 class="welcome-title">Welcome to Dragon Coders Support</h1>
                        <p class="welcome-subtitle">"Your trusted partner for exceptional customer service"</p>
                        <a href="/customer_support/login" class="get-started-btn">
                            Get Started
                        </a>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>