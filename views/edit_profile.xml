<odoo>
    <template id="portal_profile_page" name="User Profile Page">
        <t t-call="web.layout">
            <t t-set="head">
                <meta name="viewport" content="width=device-width, initial-scale=1" />
                <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
                    rel="stylesheet" />
                <link rel="stylesheet"
                    href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" />
                <link rel="stylesheet" href="/customer_support/static/src/css/edit_profile.css" />
            </t>

            <!-- ==================== MAIN CONTENT ==================== -->
            <div class="container py-4">
                <!-- ========== PAGE HEADER WITH BACK BUTTON ========== -->
                <div class="page-header-container">
                    <h1 class="h2 fw-bold text-primary-dark mb-0">My Profile</h1>
                    <a href="/customer_support/dashboard" class="back-to-dashboard">
                        <i class="bi bi-arrow-left me-1"></i>Back </a>
                </div>

                <!-- ========== TWO COLUMN LAYOUT ========== -->
                <div class="profile-layout-grid">

                    <!-- ========== LEFT COLUMN: PROFILE SECTION ========== -->
                    <div class="profile-section">
                        <!-- Profile Card Header -->
                        <div class="card-header-custom">
                            My Profile
                        </div>

                        <!-- Profile Content -->
                        <div class="profile-content">
                            <!-- Avatar, Name and Customer Badge -->
                            <div class="avatar-container">
                                <div class="avatar-circle">
                                    <span class="avatar-text">
                                        <t t-esc="user.name[0:2].upper() if user.name else ''" />
                                    </span>
                                </div>
                                <div class="user-info">
                                    <div class="user-name">
                                        <t t-esc="user.name or ''" />
                                    </div>
                                    <div class="user-role">Customer</div>
                                </div>
                            </div>

                            <!-- Edit Profile and Change Password Buttons -->
                            <div class="button-group">
                                <a href="/customer_support/profile/edit" class="btn-profile">
                                    <i class="bi bi-pencil-square me-2"></i>Edit Profile </a>
                                <a href="#" class="btn-outline-profile" data-bs-toggle="modal"
                                    data-bs-target="#changePasswordModal">
                                    <i class="bi bi-key me-2"></i>Change Password </a>
                            </div>

                            <!-- ========== PROFILE DETAILS GRID ========== -->
                            <div class="profile-details-grid">
                                <!-- Email -->
                                <div class="detail-item">
                                    <div class="detail-label">Email</div>
                                    <div class="detail-value">
                                        <t t-esc="user.email or ''" />
                                    </div>
                                </div>

                                <!-- Phone -->
                                <div class="detail-item">
                                    <div class="detail-label">Phone</div>
                                    <div class="detail-value">
                                        <t t-esc="user.partner_id.phone or 'Not set'" />
                                    </div>
                                </div>

                                <!-- Company -->
                                <div class="detail-item">
                                    <div class="detail-label">Company</div>
                                    <div class="detail-value">
                                        <t
                                            t-esc="user.partner_id.parent_id.name or user.partner_id.company_name or 'Not set'" />
                                    </div>
                                </div>

                                <!-- Customer ID -->
                                <div class="detail-item">
                                    <div class="detail-label">Customer ID</div>
                                    <div class="detail-value">
                                        <t t-esc="user.partner_id.ref or 'Not set'" />
                                    </div>
                                </div>

                                <!-- Join Date -->
                                <div class="detail-item">
                                    <div class="detail-label">Join Date</div>
                                    <div class="detail-value">
                                        <t
                                            t-esc="user.create_date.strftime('%B %d, %Y') if user.create_date else 'Not set'" />
                                    </div>
                                </div>

                                <!-- Location -->
                                <div class="detail-item">
                                    <div class="detail-label">Location</div>
                                    <div class="detail-value">
                                        <t t-if="user.partner_id.city or user.partner_id.state_id">
                                            <t t-esc="user.partner_id.city or ''" />
                                            <t
                                                t-if="user.partner_id.city and user.partner_id.state_id">
                                                , </t>
                                            <t t-esc="user.partner_id.state_id.name or ''" />
                                        </t>
                                        <t t-else="">Not set</t>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- ========== RIGHT COLUMN: ACTIVITY SUMMARY ========== -->
                    <div class="activity-section">
                        <!-- Activity Card Header -->
                        <div class="card-header-custom">
                            Activity Summary
                        </div>

                        <!-- Activity Content -->
                        <div class="activity-content">
                            <!-- Activity Stats -->
                            <div class="activity-stats">
                                <!-- Tickets Created -->
                                <div class="stat-card">
                                    <div class="stat-label">Tickets Created</div>
                                    <div class="stat-value">12</div>
                                    <div class="stat-subtext">This Month</div>
                                </div>

                                <!-- Today -->
                                <div class="stat-card">
                                    <div class="stat-label">Today</div>
                                    <div class="stat-value">1</div>
                                    <div class="stat-subtext">Closed Tickets</div>
                                </div>

                                <!-- Active Tickets -->
                                <div class="stat-card">
                                    <div class="stat-label">Active Tickets</div>
                                    <div class="stat-value">3</div>
                                    <div class="stat-subtext">Current</div>
                                </div>
                            </div>

                            <!-- Ticket Resolution Progress -->
                            <div class="resolution-card">
                                <div class="resolution-header">
                                    <span class="resolution-label">Ticket Resolved</span>
                                    <span class="resolution-percentage">95%</span>
                                </div>
                                <div class="progress-bar-wrapper">
                                    <div class="progress-bar-fill" style="width: 95%"></div>
                                </div>
                            </div>

                            <!-- Log Out Button -->
                            <button class="btn-logout"
                                onclick="window.location.href='/customer_support/logout_manual'">
                                Log Out
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- ==================== CHANGE PASSWORD MODAL ==================== -->
            <div class="modal fade" id="changePasswordModal" tabindex="-1">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <!-- Modal Header -->
                        <div class="modal-header border-0 pb-0">
                            <h5 class="modal-title text-primary-dark">Change Password</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>

                        <!-- Modal Body -->
                        <div class="modal-body pt-0">
                            <form id="passwordForm"
                                action="/customer_support/profile/update_password" method="post">
                                <!-- CSRF Token -->
                                <input type="hidden" name="csrf_token"
                                    t-att-value="request.csrf_token()" />

                                <!-- Current Password Field -->
                                <div class="mb-3">
                                    <label class="form-label">Current Password</label>
                                    <input type="password" name="old_pwd" class="form-control"
                                        required="" />
                                </div>

                                <!-- New Password Field -->
                                <div class="mb-3">
                                    <label class="form-label">New Password</label>
                                    <input type="password" name="new_pwd" class="form-control"
                                        required="" />
                                </div>

                                <!-- Confirm Password Field -->
                                <div class="mb-3">
                                    <label class="form-label">Confirm New Password</label>
                                    <input type="password" name="confirm_pwd" class="form-control"
                                        required="" />
                                </div>
                            </form>
                        </div>

                        <!-- Modal Footer -->
                        <div class="modal-footer border-0 pt-0">
                            <button type="button" class="btn btn-light" data-bs-dismiss="modal">
                                Cancel</button>
                            <button type="submit" form="passwordForm" class="btn btn-primary">Update
                                Password</button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Bootstrap JavaScript -->
            <script
                src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
        </t>
    </template>
</odoo>